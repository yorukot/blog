---

<div class="container mx-auto px-4">
  <section class="py-8 md:py-20">
    <div class="relative z-10 w-full max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-left mb-12">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-text">
          <span style="color: var(--color-primary);">Experience</span>
        </h2>
        <p class="text-lg md:text-xl text-text-muted leading-relaxed">
          Competitions, events, and activities I've participated in
        </p>
      </div>

      <!-- Experience Timeline -->
      <div class="relative space-y-6">
        {experiences.map((experience, index) => (
          <div class="relative flex items-start space-x-4 group">
            <!-- Timeline Icon -->
            <div class="flex-shrink-0 mt-1 relative z-10">
              <div 
                class="w-12 h-12 rounded-full flex items-center justify-center transition-transform duration-300 group-hover:scale-110"
                style={`background: ${experience.color}20; border: 2px solid ${experience.color};`}
              >
                <Icon 
                  name={experience.icon}
                  class="w-6 h-6"
                  style={`color: ${experience.color};`}
                />
              </div>
            </div>

            <!-- Experience Content -->
            <div 
              class="flex-1 p-6 rounded-2xl transition-all duration-300 group-hover:-translate-y-1"
              style="background: var(--color-bg-highlight); box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);"
            >
              <!-- Header -->
              <div class="flex items-start justify-between mb-3">
                <div>
                  <h3 class="text-xl md:text-2xl font-bold text-text mb-1">
                    {experience.title}
                  </h3>
                  <div class="flex items-center space-x-3">
                    <span 
                      class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium"
                      style={`background: ${experience.color}20; color: ${experience.color};`}
                    >
                      {experience.type}
                    </span>
                    <span class="text-sm text-text-muted">
                      {experience.date}
                    </span>
                  </div>
                </div>
              </div>

              <!-- Description -->
              <p class="text-text-muted leading-relaxed">
                {experience.description}
              </p>
            </div>

            <!-- Connecting Line (except for last item) -->
            {index < experiences.length - 1 && (
              <div 
                class="absolute left-6 top-16 w-0.5 h-16 z-0"
                style="background: var(--color-bg-card);"
              >
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Additional Info -->
      <div class="mt-12 text-center">
        <p class="text-text-muted leading-relaxed mb-4">
          Always eager to participate in new events and learn from the community.
        </p>
        <div class="flex justify-center items-center">
          <Icon
            name="icon-park-outline:dot"
            class="mr-2"
            style="color: var(--color-primary);"
            size={24}
          />
          <span class="text-text">
            Looking forward to more exciting opportunities
          </span>
        </div>
      </div>
    </div>
  </section>
</div>
